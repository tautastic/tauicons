{
  "private": true,
  "workspaces": [
    "packages/tauicons"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:write": "turbo run format:write",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "rm -rf node_modules .next .cache dist"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "prettier": "^2.8.4",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 100,
    "endOfLine": "lf",
    "singleQuote": false,
    "proseWrap": "always",
    "bracketSpacing": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "bracketSameLine": false,
    "singleAttributePerLine": false
  },
  "packageManager": "pnpm@7.29.1"
}
